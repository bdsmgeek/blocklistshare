{
    // Comments are accepted in the manifest, even though it is JSON.
    "manifest_version": 3,
    "name": "Blocklist Sharer",
    "description": "A tool to export and import blocklists.",
    "version": "0.0.1",
    "icons": {
        "16": "logo/logo-16.png",
        "48": "logo/logo-48.png",
        "128": "logo/logo-128.png"
    },
    "options_page": "settings/settings.html",
    "action": {
        "default_title": "Blocklist Sharer",
        "default_popup": "popup/popup.html"
    },
    "permissions": [],
    "host_permissions": [
        "*://fetlife.com/*"
    ],
    "background": {
        "service_worker": "service-worker.js"
    },
    "content_scripts": [{
        "js": [
            "content_scripts/fetlife.js"
        ],
        "css": [
            "content_scripts/fetlife.css"
        ],
        "matches": [
            "https://fetlife.com/settings/blocked*"
        ]
    }]
}